---
- name: OVMF firmware
  ansible.builtin.apt:
    pkg:
    - ovmf
  become: yes


- name: /etc/modules
  become: yes
  blockinfile:
    path: /etc/modules
    block: |
      pci_stub
      vfio
      vfio_iommu_type1
      vfio_pci
      vfio_virqfd
  notify:
    - initramfs rebuild Debian

- include_tasks: common/iommu on
