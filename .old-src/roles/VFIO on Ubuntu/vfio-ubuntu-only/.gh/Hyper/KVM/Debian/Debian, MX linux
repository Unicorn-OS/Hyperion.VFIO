# base, Headless
sudo apt install libvirt-daemon qemu-kvm qemu-utils ovmf

# Display
sudo apt install virt-manager virt-viewer gir1.2-spice-client-gtk-3.0 #fixes it!
#del: spice-client-gtk

# permissions
sudo adduser $USER libvirt
sudo adduser $USER libvirt-qemu

# Network
# https://wiki.debian.org/KVM#Libvirt_default_network
# https://superuser.com/questions/1063240/libvirt-failed-to-initialize-a-valid-firewall-backend
sudo apt install -y bridge-utils
sudo apt install -y ebtables firewalld dnsmasq

# last
#del: libspice-client-gtk-3.0-5

qemu-kvm libvirt0 
